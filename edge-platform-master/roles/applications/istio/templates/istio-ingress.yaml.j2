apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: gateway
  namespace: istio-system
spec:
  ingressClassName: join-nginx
  rules:
  - host: kiali.joiningos.com
    http:
      paths:
      - backend:
          service:
            name: kiali
            port:
              number: 20001
        path: /
        pathType: ImplementationSpecific
  tls:
  - hosts:
    - kiali.joiningos.com
    secretName: istio-joiningos
